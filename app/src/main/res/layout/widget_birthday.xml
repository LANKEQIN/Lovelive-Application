<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:baselineAligned="false"
    android:background="@drawable/widget_adaptive_background">

    <!-- 你可以在这里加一个标题，如果需要的话 -->
    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="近期生日"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 第一个生日信息 -->
        <LinearLayout
            android:id="@+id/widget_item_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/widget_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="-" />

            <TextView
                android:id="@+id/widget_birthday_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginTop="2dp"
                android:text="-"/>

            <TextView
                android:id="@+id/widget_days_left_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>

        <!-- 第二个生日信息 -->
        <LinearLayout
            android:id="@+id/widget_item_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/widget_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="-"/>

            <TextView
                android:id="@+id/widget_birthday_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginTop="2dp"
                android:text="-"/>

            <TextView
                android:id="@+id/widget_days_left_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>

        <!-- 第三个生日信息 -->
        <LinearLayout
            android:id="@+id/widget_item_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/widget_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="-"/>

            <TextView
                android:id="@+id/widget_birthday_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginTop="2dp"
                android:text="-"/>

            <TextView
                android:id="@+id/widget_days_left_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>

        <!-- 第四个生日信息 -->
        <LinearLayout
            android:id="@+id/widget_item_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/widget_name_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/widget_text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="-"/>
            <TextView
                android:id="@+id/widget_birthday_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/widget_text_secondary"
                android:layout_marginTop="2dp"
                android:text="-"/>
            <TextView
                android:id="@+id/widget_days_left_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
