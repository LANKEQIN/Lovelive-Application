<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/widget_background">

    <!-- 第一个生日信息 (左上) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/widget_item_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/widget_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#E0E0E0"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="-" />

            <TextView
                android:id="@+id/widget_birthday_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="2dp"
                android:text="-"/>

            <TextView
                android:id="@+id/widget_days_left_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>

        <!-- 第二个生日信息 (右上) -->
        <LinearLayout
            android:id="@+id/widget_item_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/widget_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#E0E0E0"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="-"/>
            <TextView
                android:id="@+id/widget_birthday_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="2dp"
                android:text="-"/>
            <TextView
                android:id="@+id/widget_days_left_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 第二行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:baselineAligned="false">

        <!-- 第三个生日信息 (左下) -->
        <LinearLayout
            android:id="@+id/widget_item_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/widget_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#E0E0E0"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="-"/>
            <TextView
                android:id="@+id/widget_birthday_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="2dp"
                android:text="-"/>
            <TextView
                android:id="@+id/widget_days_left_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>
        <!-- 第四个生日信息 (右下) -->
        <LinearLayout
            android:id="@+id/widget_item_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/widget_name_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#E0E0E0"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="-"/>
            <TextView
                android:id="@+id/widget_birthday_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="2dp"
                android:text="-"/>
            <TextView
                android:id="@+id/widget_days_left_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:text="-"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>










